extends layout

block content
    ul.list-group
        li.list-group-item.m-2(style="background-color:rgba(0,0,0,0.6);border: solid;border-color: white;")
                .col-md-12.text-center
                    h1 
                        = currentRestaurant.restaurantsName 
                .row 
                    .col-md-6
                        img.imgsize.m-3(src="."+currentRestaurant.imagePath alt=currentRestaurant.name style='max-width:100%; max-height:300px;border:solid;border-color:#423b3b')    
                    .col-md-6.font-weight-bold(style="align-self:center")
                        p.h4.mb-4= "Address : " + currentRestaurant.address
                        
                        - for (var x = 1; x <= Number(currentRestaurant.rating); x++)
                            span.fa.fa-star(style="color:yellow")

                        - for (var x = 0; x < 5 - Number(currentRestaurant.rating); x++)
                            span.fa.fa-star   
                        p.h4.mb-4= "Rating : " + currentRestaurant.rating
                        p.h4.mb-4= "Phone Number : " + currentRestaurant.phoneNumber
                        a(class='btn btn-warning btn-lg  mt-3' href='tel:'+currentRestaurant.phone) 
                            span.h5.font-weight-bold Call Now 
                .col-md-12.mt-5 
                    h5  Food Items :
                    table.table
                        tbody 
                            each v,i in currentRestaurant.specialFood
                                tr
                                    td= v["name"] 
                                    td= v["price"]             
